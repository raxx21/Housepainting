<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="28sp"
                android:fontFamily="@font/boogaloo"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/shop_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop1"
                android:textSize="28sp"
                android:fontFamily="@font/boogaloo"
                android:layout_toRightOf="@id/shop_name"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="24sp"
                android:fontFamily="@font/boogaloo"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/shop_phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9011842557"
                android:textSize="24sp"
                android:fontFamily="@font/boogaloo"
                android:layout_toRightOf="@id/shop_phone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/shop_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="24sp"
                android:fontFamily="@font/boogaloo"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/shop_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9011842557"
                android:textSize="20sp"
                android:fontFamily="@font/boogaloo"
                android:layout_toRightOf="@id/shop_add"
                />

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>